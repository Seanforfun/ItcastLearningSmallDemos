CREATE DATABASE struts2;
USE struts2;
CREATE USER struts2@localhost IDENTIFIED BY 'struts2';
GRANT ALL ON struts2.* TO struts2@localhost;
CREATE TABLE USER(
	userID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
	USERNAME VARCHAR(50) NULL,
	LOGINNAME VARCHAR(50) NULL,
	LOGINPWD VARCHAR(50) NULL,
	SEX VARCHAR(10) NULL,
	BIRTHDAY VARCHAR(50) NULL,
	EDUCATION VARCHAR(50) NULL,
	TELEPHONE VARCHAR(50) NULL,
	INTEREST VARCHAR(50) NULL,
	PATH VARCHAR(500) NULL,
	FILENAME VARCHAR(100) NULL,
	REMARK VARCHAR(500) NULL
);

DESC USER;

INSERT INTO USER (userID, username, loginname,loginpwd) VALUES (1, 'administrator','admin','admin');